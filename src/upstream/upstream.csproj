<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0-windows10.0.19041</TargetFramework>
    <Nullable>enable</Nullable>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Dhgms.DocFx.MermaidJs.Plugin" Version="1.0.315" PrivateAssets="all" />
    <PackageReference Include="Dhgms.GripeWithRoslyn.Analyzer" Version="1.12.14" PrivateAssets="all" />
    <PackageReference Include="Dhgms.Nucleotide" Version="3.2.131" PrivateAssets="all" />
    <PackageReference Include="Dhgms.Nucleotide.Analyzers" Version="3.2.131" PrivateAssets="all" />
    <PackageReference Include="Dhgms.Nucleotide.Generators" Version="3.2.131" PrivateAssets="all" />
    <PackageReference Include="NetTestRegimentation" Version="1.7.2" PrivateAssets="all" />
    <PackageReference Include="NetTestRegimentation.Moq" Version="1.7.2" PrivateAssets="all" />
    <PackageReference Include="NLog.Targets.TextWriter" Version="1.2.0" PrivateAssets="all" />
    <PackageReference Include="Vetuviem.Core" Version="0.9.215" PrivateAssets="all" />
    <PackageReference Include="Vetuviem.SourceGenerator" Version="0.9.215" PrivateAssets="all" />
    <PackageReference Include="Whipstaff.AspNetCore" Version="6.1.83" PrivateAssets="all" />
    <PackageReference Include="Whipstaff.Core" Version="6.1.83" PrivateAssets="all" />
    <PackageReference Include="Whipstaff.Couchbase" Version="6.1.83" PrivateAssets="all" />
    <PackageReference Include="Whipstaff.EntityFramework" Version="6.1.83" PrivateAssets="all" />
    <PackageReference Include="Whipstaff.Entityframework.Relational" Version="6.1.83" PrivateAssets="all" />
    <PackageReference Include="Whipstaff.MediatR.EntityFrameworkCore" Version="6.1.83" PrivateAssets="all" />
    <PackageReference Include="Whipstaff.MediatR.Foundatio" Version="6.1.83" PrivateAssets="all" />
    <PackageReference Include="Whipstaff.MsSql" Version="6.1.83" PrivateAssets="all" />
    <PackageReference Include="Whipstaff.NodaTime" Version="6.1.83" PrivateAssets="all" />
    <PackageReference Include="Whipstaff.OpenXml" Version="6.1.83" PrivateAssets="all" />
    <PackageReference Include="Whipstaff.Oracle" Version="6.1.83" PrivateAssets="all" />
    <PackageReference Include="Whipstaff.ReactiveUI" Version="6.1.83" PrivateAssets="all" />
    <PackageReference Include="Whipstaff.Runtime" Version="6.1.83" PrivateAssets="all" />
    <PackageReference Include="Whipstaff.Rx" Version="6.1.83" PrivateAssets="all" />
    <PackageReference Include="Whipstaff.Windows" Version="6.1.83" PrivateAssets="all" />
    <PackageReference Include="Whipstaff.Wpf" Version="6.1.83" PrivateAssets="all" />
    <PackageReference Include="Whipstaff.Wpf.Mahapps" Version="6.1.83" PrivateAssets="all" />
  </ItemGroup>

  <!-- https://stackoverflow.com/questions/70602507/retrieve-docfx-metadata-from-nuget-packages -->
  <Target Name="_ResolveCopyLocalNuGetPkgXmls" AfterTargets="ResolveReferences">
    <ItemGroup>
      <!-- Copy XML files from all PackageReferences to output dir -->
      <ReferenceCopyLocalPaths Include="@(ReferenceCopyLocalPaths->'%(RootDir)%(Directory)%(Filename).xml')" Condition="'%(ReferenceCopyLocalPaths.NuGetPackageId)'!='' and Exists('%(RootDir)%(Directory)%(Filename).xml')" />
    </ItemGroup>
  </Target>
</Project>
