<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows10.0.19041</TargetFramework>
    <Nullable>enable</Nullable>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Dhgms.DocFx.MermaidJs.Plugin" Version="2.0.33" />
    <PackageReference Include="Dhgms.GripeWithRoslyn.Analyzer" Version="1.13.24" />
    <PackageReference Include="Dhgms.Nucleotide" Version="3.2.228" />
    <PackageReference Include="Dhgms.Nucleotide.Analyzers" Version="3.2.228" />
    <PackageReference Include="Dhgms.Nucleotide.Generators" Version="3.2.228" />
    <PackageReference Include="NetTestRegimentation" Version="1.7.48" />
    <PackageReference Include="NetTestRegimentation.Moq" Version="1.7.48" />
    <PackageReference Include="NLog.Targets.TextWriter" Version="1.2.0" />
    <PackageReference Include="Vetuviem.Core" Version="0.9.244" />
    <PackageReference Include="Vetuviem.SourceGenerator" Version="0.9.244" />
    <PackageReference Include="Whipstaff.AspNetCore" Version="7.1.45" />
    <PackageReference Include="Whipstaff.Core" Version="7.1.45" />
    <PackageReference Include="Whipstaff.Couchbase" Version="7.1.45" />
    <PackageReference Include="Whipstaff.EntityFramework" Version="7.1.45" />
    <PackageReference Include="Whipstaff.Entityframework.Relational" Version="7.1.45" />
    <PackageReference Include="Whipstaff.MediatR.EntityFrameworkCore" Version="7.1.45" />
    <PackageReference Include="Whipstaff.MediatR.Foundatio" Version="7.1.45" />
    <PackageReference Include="Whipstaff.MsSql" Version="7.1.45" />
    <PackageReference Include="Whipstaff.NodaTime" Version="7.1.45" />
    <PackageReference Include="Whipstaff.OpenXml" Version="7.1.45" />
    <PackageReference Include="Whipstaff.Oracle" Version="7.1.45" />
    <PackageReference Include="Whipstaff.ReactiveUI" Version="7.1.45" />
    <PackageReference Include="Whipstaff.Runtime" Version="7.1.45" />
    <PackageReference Include="Whipstaff.Rx" Version="7.1.45" />
    <PackageReference Include="Whipstaff.Windows" Version="7.1.45" />
    <PackageReference Include="Whipstaff.Wpf" Version="7.1.45" />
    <PackageReference Include="Whipstaff.Wpf.Mahapps" Version="7.1.45" />
  </ItemGroup>

  <!-- https://stackoverflow.com/questions/70602507/retrieve-docfx-metadata-from-nuget-packages -->
  <Target Name="_ResolveCopyLocalNuGetPkgXmls" AfterTargets="ResolveReferences">
    <ItemGroup>
      <!-- Copy XML files from all PackageReferences to output dir -->
      <ReferenceCopyLocalPaths Include="@(ReferenceCopyLocalPaths->'%(RootDir)%(Directory)%(Filename).xml')" Condition="'%(ReferenceCopyLocalPaths.NuGetPackageId)'!='' and Exists('%(RootDir)%(Directory)%(Filename).xml')" />
    </ItemGroup>
  </Target>
</Project>
